{
  "angularCompilerOptions": {
   "genDir": "aot",
   "skipMetadataEmit" : true
  },
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "files": [
    "index.compiled.ts"
  ],
  "include": [
    "**/*"
  ]
}
